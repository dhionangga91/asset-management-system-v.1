<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".tambahAset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="316dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Aset"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextNameAset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/borderPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Aset"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/borderPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kapasitas"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/borderPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Aset"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/borderPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Manufaktur"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextDateman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yyyy/MM/DD"
            android:textColorHint="#ACACAC"
            android:backgroundTint="@color/borderPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal PM"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextDatepm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yyyy/MM/DD"
            android:textColorHint="#ACACAC"
            android:backgroundTint="@color/borderPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_library_add"
                android:backgroundTint="@color/borderPrimary"/>

            <ImageButton
                android:id="@+id/buttonView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list"
                android:backgroundTint="@color/borderPrimary"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>